# ===========================================
# PURE WEB APP MODE (Local Only)
# ===========================================
# Only this is required for local-only mode:
VITE_GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# CLOUD MODE (Vercel + Supabase)
# ===========================================
# Server-side Gemini API (for Vercel functions)
GEMINI_API_KEY=your_gemini_api_key

# Supabase (Required for cloud sync)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key

# Client-side Supabase (for frontend cloud features)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# ===========================================
# OPTIONAL: Google Drive Backup
# ===========================================
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=https://your-app.vercel.app/api/gdrive/auth
